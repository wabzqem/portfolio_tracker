{
  "name": "portfolio-tracker",
  "productName": "Portfolio Tracker",
  "version": "1.0.0",
  "description": "Portfolio tracking application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --development",
    "web": "node server.js",
    "web-dev": "nodemon server.js",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "dependencies": {
    "csv-parser": "^3.0.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.portfoliotracker.app",
    "productName": "Portfolio Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "public/**/*",
      "assets/**/*",
      "*.csv",
      "package.json"
    ],
    "icon": "assets/icon.png",
    "mac": {
      "category": "public.app-category.finance",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "keywords": ["portfolio", "trading", "finance", "electron"],
  "author": "",
  "license": "MIT"
}

